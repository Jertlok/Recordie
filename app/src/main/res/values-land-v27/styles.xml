<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Material alert dialog -->
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="bottom_bar_ic_tint">@color/grey_500</item>
        <item name="bottom_bar_color">@color/white</item>
    </style>

    <style name="AppTheme.Settings" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="backgroundColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="actionBarTheme">@style/AppTheme.Settings.ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Material alert dialog -->
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>
        <!-- Button style for preferences etc. -->
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.Settings.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Special theme for Tile -->
    <style name ="InvisibleActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!-- Material alert dialog -->
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name ="InvisibleActivity.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!-- Material alert dialog -->
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/grey_900</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:statusBarColor">@color/grey_900</item>
        <item name="android:navigationBarColor">@color/grey_900</item>
        <!-- Material alert dialog -->
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>

        <item name="bottomAppBarStyle">@style/AppTheme.BottomAppBar.Dark</item>
        <item name="materialCardViewStyle">@style/AppTheme.MaterialCardView.Dark</item>
        <item name="bottom_bar_ic_tint">@color/grey_200</item>
        <item name="bottom_bar_color">@color/grey_800</item>
    </style>

    <style name="AppTheme.Settings.Dark" parent="Theme.MaterialComponents">
        <item name="backgroundColor">@color/grey_900</item>
        <item name="actionBarTheme">@style/AppTheme.Settings.Dark.ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/grey_900</item>
        <item name="android:navigationBarColor">@color/grey_900</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Material alert dialog -->
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>
        <!-- Button style for preferences etc. -->
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.Settings.Dark.ActionBar" parent="Theme.MaterialComponents">
        <item name="android:background">@color/grey_900</item>
    </style>

    <style name="AppTheme.BottomAppBar.Dark" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:backgroundTint">@color/grey_800</item>
    </style>

    <style name="AppTheme.MaterialCardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/grey_800</item>
    </style>

</resources>