<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card3"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="65.0dip">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:layout_gravity="start|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translators" />

        </LinearLayout>

        <!-- Hindi -->
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_marginTop="-5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/icon_infofg"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/account"/>

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32.0dip">

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_hindi" />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hindi" />

            </LinearLayout>
        </LinearLayout>

        <!-- Russian -->
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_marginTop="-5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/account"/>

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32.0dip">

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_russian" />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/russian" />
            </LinearLayout>
        </LinearLayout>

        <!-- Portuguese -->
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_marginTop="-5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/account"/>

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32.0dip">

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_portugues" />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/portuguese" />
            </LinearLayout>
        </LinearLayout>

        <!-- Swedish -->
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_marginTop="-5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/account"/>

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32.0dip">

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_swedish" />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/swedish" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>